{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "trybe-frontend",
    "parserOptions": {
        "ecmaFeatures": {
        "jsx": true
      },
        "sourceType": "module"
    },
    "plugins": ["react"],

    "rules": {
    "react/react-in-jsx-scope": "off",
   "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }], //should add ".ts" if typescript project
  }

}
